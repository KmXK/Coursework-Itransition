@model Coursework.ViewModels.LoginViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> _sharedLocalizer

@{
    ViewBag.Title = "Sign In";
}

<h1>@_sharedLocalizer["SignIn"]</h1>

<form class="mb-3" asp-controller="Authorization" asp-action="Login" method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="container">
        <label class="col-2">@_sharedLocalizer["Username"]</label>
        <input class="col-4" type="text" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <br />
    <div class="container">
        <label class="col-2">@_sharedLocalizer["Password"]</label>
        <input class="col-4" type="password" asp-for="Password" />
    </div>

    <br />

    <div class="container">
        <label>@_sharedLocalizer["RememberMe"]</label>
        <input class="ms-1" type="checkbox" asp-for="RememberMe" />
    </div>

    <br />

    <input type="submit" class="btn btn-primary" />
</form>

<br />

<form asp-controller="Authorization" asp-action="LoginExternal" method="post">
    <input hidden name="returnUrl" value=@Model.ReturnUrl />
    <button class="btn btn-lg btn-social btn-facebook" type="submit"
            name="provider" value="Facebook">
        <span class="fa fa-facebook" style="color: white"></span> Sign in with Facebook
    </button>
</form>