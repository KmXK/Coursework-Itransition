@model Coursework.ViewModels.LoginViewModel
@inject IHtmlLocalizer<SharedResource> _sharedLocalizer

@{
    ViewBag.Title = "Sign In";
}

<h1>@_sharedLocalizer["SignIn"]</h1>

<form class="mb-3 border-bottom pb-3" asp-controller="Authorization" asp-action="Login" method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label class="col-2 form-label" asp-for="Username"></label>
        <input class="col-4 form-control" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <br />
    <div>
        <label class="col-2 form-label" asp-for="Password"></label>
        <input class="col-4 form-control" asp-for="Password" />
    </div>

    <br />

    <div>
        <label class="form-check-label" asp-for="RememberMe"></label>
        <input class="ms-1 form-check-inline" asp-for="RememberMe" />
    </div>

    <br />

    <input type="submit" class="btn btn-primary" value="@_sharedLocalizer["Confirm"]"/>
</form>

@{
    await Html.RenderPartialAsync("SocialNetworksPartial", Model.ReturnUrl);
}
