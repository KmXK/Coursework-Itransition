@model Coursework.ViewModels.LoginViewModel
@inject IHtmlLocalizer<SharedResource> _sharedLocalizer

@{
    ViewBag.Title = "Sign In";
}

<h1>@_sharedLocalizer["SignIn"]</h1>

<form class="mb-3 border-bottom pb-3" asp-controller="Authorization" asp-action="Login" method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="container">
        <label class="col-2">@_sharedLocalizer["Username"]</label>
        <input class="col-4 form-text" type="text" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <br />
    <div class="container">
        <label class="col-2">@_sharedLocalizer["Password"]</label>
        <input class="col-4 form-control" type="password" asp-for="Password" />
    </div>

    <br />

    <div class="container">
        <label>@_sharedLocalizer["RememberMe"]</label>
        <input class="ms-1 form-check" type="checkbox" asp-for="RememberMe" />
    </div>

    <br />

    <input type="submit" class="btn btn-primary" />
</form>

@{
    await Html.RenderPartialAsync("SocialNetworksPartial", Model.ReturnUrl);
}
