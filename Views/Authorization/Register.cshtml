@model Coursework.ViewModels.RegisterViewModel
@inject IHtmlLocalizer<SharedResource> _sharedLocalizer

@{
    ViewBag.Title = "Sign Up";
}

<h1>@_sharedLocalizer["Register"]</h1>

<form class="mb-3 border-bottom pb-3" asp-controller="Authorization" asp-action="Register" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label class="col-2 form-label" asp-for="Username"></label>
        <input class="col-4 form-control" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <br />
    <div>
        <label class="col-2 form-label" asp-for="Password"></label>
        <input class="col-4 form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <br />
    <div>
        <label class="col-2 form-label" asp-for="ConfirmPassword"></label>
        <input class="col-4 form-control" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <br />
    <div>
        <label class="col-2 form-label">@_sharedLocalizer["Avatar"]</label>
        <input class="col-4 form-control" type="file" name="avatarFile" accept="image/*" />
    </div>

    <br />
    <input type="submit" class="btn btn-primary" value="@_sharedLocalizer["Confirm"]"/>
</form>

@{
    await Html.RenderPartialAsync("SocialNetworksPartial", "");
}
