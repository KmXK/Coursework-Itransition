@using Microsoft.Extensions.Configuration
@inject IConfiguration _configuration

@{
    string bootstrapPath = "/lib/bootstrap/css/bootstrap.css";
    if (Context.Request.Cookies.ContainsKey("themeCookie"))
    {
        var cookieValue = Context.Request.Cookies["themeCookie"];
        bootstrapPath = _configuration.GetSection("ThemeFiles")[cookieValue] ?? bootstrapPath;
    }
}
<link rel="stylesheet" href="@bootstrapPath" />
<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-social.css"/>
<link rel="stylesheet" href="~/lib/datatables/media/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">
<link rel="stylesheet" href="~/lib/simplemde/dist/simplemde.min.css">
<link rel="stylesheet" href="~/lib/bootstrap-star-rating/themes/krajee-svg/theme.min.css"/>
<link rel="stylesheet" href="~/lib/bootstrap-star-rating/css/star-rating.min.css"/>
<link rel="stylesheet" href="~/css/site.css" />