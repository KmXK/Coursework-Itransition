@model Coursework.Models.Comment

<div class="d-flex flex-start mt-4">
    <a class="me-3" href="#">
        <img class="rounded-circle shadow-1-strong" 
             src="@Model.Author.AvatarUrl" alt="avatar" width="65" height="65">
    </a>
    <div class="flex-grow-1 flex-shrink-1">
        <div>
            <div class="d-flex justify-content-between align-items-center">
                <p class="mb-1">
                    @Model.Author.UserName <span class="small">- @Model.PostTime.ToString("g")</span>
                </p>
            </div>
            <p class="small mb-0">
                @Model.Text
            </p>
        </div>
    </div>
</div>
