@model Coursework.Models.CreateRewiewViewModel

@{
    ViewBag.Title = "Create";
}

<form class="mb-3" asp-controller="Review" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="container">
        <label class="col-2">Title</label>
        <input class="col-4" type="text" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <br />
    <div class="container">
        <label class="col-2">Text</label>
        <input class="col-10" type="text" asp-for="Text" />
    </div>
    <br/>
    <div class="container">
        <label class="col-2">Rating</label>
        <input class="col-4" type="number" min="0" max="10" asp-for="Rating"/>
    </div>

    <input type="submit" class="btn btn-primary" />
</form>