@model Coursework.Models.Review

<div class="card">
    <div class="card-body">
        <div class="d-flex flex-start align-items-center">
            <img class="rounded-circle shadow-1-strong me-3" src="@Model.Author.AvatarUrl" alt="avatar" width="60" height="60">
            <div>
                <h6 class="fw-bold text-primary mb-1">@Model.Author.UserName</h6>
            </div>
        </div>

        <p class="mt-3 mb-4 pb-2">
            @Model.Text
        </p>
    </div>
</div>