@model Coursework.Models.Review


<div class="card">
    <div class="card-body">
        <div class="d-flex row">
            <div class="d-flex flex-start">
                <img class="rounded-circle shadow-1-strong me-3" src="@Model.Author.AvatarUrl" alt="avatar" width="60" height="60">
                <div>
                    <h6 class="fw-bold text-primary mb-1">@Model.Author.UserName</h6>
                </div>
            </div>
        
            <div class="d-flex flex-end">
                <a asp-controller="Review" asp-action="Details" asp-route-id="@Model.Id">
                    <h3>@Model.Title</h3>
                </a>
            </div>
        </div>
    </div>
</div>