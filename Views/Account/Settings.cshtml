@model Coursework.ViewModels.SettingsViewModel

<h2>Settings</h2>

<form method="post" asp-controller="Account" asp-action="Settings">
    <div class="col-xl-3 col-md-4 col-sm-6 col-12">
        <select class="form-select" asp-for="TargetLanguage"
                asp-items="new SelectList(Model.Languages, Model.TargetLanguage)">
        </select>
        <br />
        <select class="form-select" asp-for="TargetTheme"
                asp-items="new SelectList(Model.Themes, Model.TargetTheme)">
        </select>
        <br />
    </div>

    <button class="btn btn-success mb-2" type="submit">Accept</button>
</form>